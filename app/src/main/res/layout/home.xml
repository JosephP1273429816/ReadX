<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/primary"
    android:backgroundTint="@color/primary"
    tools:context=".view.Home"
    android:theme="@style/AppTheme"
    tools:ignore="ExtraText">

    <View
        android:id="@+id/viewBarDos3"
        android:layout_width="wrap_content"
        android:layout_height="2dp"
        android:layout_marginBottom="2dp"
        android:background="@color/bar"
        app:layout_constraintBottom_toTopOf="@+id/jugar"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent" />

    <LinearLayout
        android:id="@+id/linearRankingGlobal"
        android:layout_width="144dp"
        android:layout_height="157dp"
        android:layout_marginTop="10dp"
        android:layout_marginEnd="10dp"
        android:orientation="vertical"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="1.0"
        app:layout_constraintStart_toEndOf="@+id/chartTitle2"
        app:layout_constraintTop_toBottomOf="@+id/chartTitle2"
        tools:ignore="TextSizeCheck">

        <TextView
            android:id="@+id/textViewGlobalRanking"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:text="@string/ranking_global"
            android:textColor="@color/white"
            android:textSize="10sp"
            tools:ignore="SmallSp" />


    </LinearLayout>

    <LinearLayout
        android:id="@+id/linearRankingSemanal"
        android:layout_width="173dp"
        android:layout_height="164dp"
        android:layout_marginStart="10dp"
        android:layout_marginTop="10dp"
        android:orientation="vertical"
        app:layout_constraintEnd_toStartOf="@+id/chartTitle2"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/chartTitle2"
        tools:ignore="TextSizeCheck">

        <TextView
            android:id="@+id/textViewSemanalRanking"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:text="@string/ranking_semanal"
            android:textColor="@color/white"
            android:textSize="10sp"
            tools:ignore="SmallSp" />


    </LinearLayout>

    <TextView
        android:id="@+id/chartTitle2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/barChart"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="20dp"
        android:text="@string/rankin"
        android:textColor="@color/primarySecond"
        android:textSize="12sp"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.498"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/promedioTextView"
        tools:ignore="TextContrastCheck" />


    <com.github.mikephil.charting.charts.BarChart
        android:id="@+id/barChart"
        android:layout_width="345dp"
        android:layout_height="205dp"
        android:layout_marginStart="10dp"
        android:layout_marginTop="20dp"
        android:layout_marginEnd="10dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/chartTitle" />

    <TextView
        android:id="@+id/chartTitle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/barChart"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="20dp"
        android:text="@string/actividad_del_usuario_por_d_as_de_la_semana"
        android:textColor="@color/primarySecond"
        android:textSize="12sp"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/bienvenida"
        tools:ignore="TextContrastCheck" />

    <TextView
        android:id="@+id/promedioTextView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/barChart"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="5dp"
        android:text="@string/promedio_semanal"
        android:textColor="@color/white"
        android:textSize="10sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/barChart"
        tools:ignore="SmallSp" />

    <View
        android:id="@+id/viewBarDos"
        android:layout_width="wrap_content"
        android:layout_height="2dp"
        android:background="@color/bar"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/Lgo" />

    //barra de tareas

    <ImageView
        android:id="@+id/Lgo"
        android:layout_width="73dp"
        android:layout_height="69dp"
        android:contentDescription="@string/Logo"
        app:layout_constraintBottom_toBottomOf="@+id/view"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.0"
        app:srcCompat="@drawable/icon"
        tools:ignore="UnknownId" />


    <TextView
        android:id="@+id/bienvenida"
        android:layout_width="237dp"
        android:layout_height="49dp"
        android:gravity="center"
        android:text="@string/bienvenido_name"
        android:textColor="@color/primarySecond"
        android:textSize="14sp"
        android:textStyle="bold"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.023"
        tools:ignore="TextSizeCheck,UnknownId,TextContrastCheck" />

    <Button
        android:id="@+id/ajustes"
        android:layout_width="80dp"
        android:layout_height="48dp"
        android:layout_marginBottom="4dp"
        android:background="@color/transp"
        android:contentDescription="@string/ajustes"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toStartOf="@+id/jugar"
        app:layout_constraintHorizontal_bias="0.247"
        app:layout_constraintStart_toStartOf="parent"
        tools:ignore="DuplicateSpeakableTextCheck,DuplicateSpeakableTextCheck" />

    <Button
        android:id="@+id/soporte"
        android:layout_width="80dp"
        android:layout_height="48dp"
        android:layout_marginBottom="4dp"
        android:background="@color/transp"
        android:contentDescription="@string/amigos"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.79"
        app:layout_constraintStart_toEndOf="@+id/jugar"
        tools:ignore="DuplicateSpeakableTextCheck" />

    <Button
        android:id="@+id/jugar"
        android:layout_width="80dp"
        android:layout_height="48dp"
        android:layout_marginBottom="4dp"
        android:background="@color/transp"
        android:contentDescription="@string/amigos"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.498"
        app:layout_constraintStart_toStartOf="parent"
        tools:ignore="DuplicateSpeakableTextCheck" />

    <TextView
        android:id="@+id/texFriend"
        android:layout_width="80dp"
        android:layout_height="20dp"
        android:layout_marginBottom="4dp"
        android:layout_weight="1"
        android:gravity="center"
        android:text="@string/amigos"
        android:textColor="@color/primarySecond"
        android:textSize="12sp"
        android:textStyle="bold"
        app:layout_constraintBottom_toBottomOf="@+id/soporte"
        app:layout_constraintEnd_toEndOf="@+id/soporte"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="@+id/soporte"
        app:layout_constraintTop_toBottomOf="@+id/imageView3"
        tools:ignore="SmallSp,TextSizeCheck,UnknownId,TextContrastCheck" />

    <TextView
        android:id="@+id/texConfi"
        android:layout_width="80dp"
        android:layout_height="20dp"
        android:layout_marginBottom="4dp"
        android:layout_weight="1"
        android:gravity="center"
        android:text="@string/ajustes"
        android:textColor="@color/primarySecond"
        android:textSize="12sp"
        android:textStyle="bold"
        app:layout_constraintBottom_toBottomOf="@+id/ajustes"
        app:layout_constraintEnd_toEndOf="@+id/ajustes"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="@+id/ajustes"
        app:layout_constraintTop_toBottomOf="@+id/imageView5"
        tools:ignore="SmallSp,TextSizeCheck,UnknownId,TextContrastCheck" />

    <TextView
        android:id="@+id/texGame"
        android:layout_width="80dp"
        android:layout_height="20dp"
        android:layout_marginBottom="4dp"
        android:layout_weight="1"
        android:gravity="center"
        android:text="@string/jugar"
        android:textColor="@color/primarySecond"
        android:textSize="12sp"
        android:textStyle="bold"
        app:layout_constraintBottom_toBottomOf="@+id/jugar"
        app:layout_constraintEnd_toEndOf="@+id/jugar"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="@+id/jugar"
        app:layout_constraintTop_toBottomOf="@+id/imageView4"
        tools:ignore="SmallSp,TextSizeCheck,UnknownId,TextContrastCheck" />

    <ImageView
        android:id="@+id/imagegame"
        android:layout_width="30dp"
        android:layout_height="30dp"
        android:contentDescription="@string/ImgGame"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.498"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="@+id/jugar"
        app:layout_constraintVertical_bias="0.0"
        app:srcCompat="@drawable/game"
        app:tint="@color/primarySecond" />

    <ImageView
        android:id="@+id/imageFriend"
        android:layout_width="25dp"
        android:layout_height="25dp"
        android:layout_marginBottom="20dp"
        android:background="@drawable/ayudar"
        android:backgroundTint="@color/primarySecond"
        app:layout_constraintBottom_toBottomOf="@+id/soporte"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.726"
        app:layout_constraintStart_toEndOf="@+id/imagegame"
        tools:ignore="ContentDescription,ImageContrastCheck,ImageContrastCheck,VisualLintBounds" />

    <ImageView
        android:id="@+id/imageConfi"
        android:layout_width="25dp"
        android:layout_height="25dp"
        android:layout_marginBottom="20dp"
        android:background="@drawable/configuraciones"
        android:backgroundTint="@color/primarySecond"
        android:contentDescription="@string/Confimg"
        app:layout_constraintBottom_toBottomOf="@+id/ajustes"
        app:layout_constraintEnd_toStartOf="@+id/imagegame"
        app:layout_constraintHorizontal_bias="0.293"
        app:layout_constraintStart_toStartOf="parent"
        tools:ignore="ImageContrastCheck" />


</androidx.constraintlayout.widget.ConstraintLayout>
<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/nav_graph"
    app:startDestination="@id/home_list_fragment">

    <fragment
        android:id="@+id/home_list_fragment"
        android:name="com.joseph.readxapp.homeListFragment"
        android:label="homeListFragment" >
        <action
            android:id="@+id/show_home_detail"
            app:destination="@id/home_detail_fragment" />
    </fragment>
    <fragment
        android:id="@+id/home_detail_fragment"
        android:name="com.joseph.readxapp.homeDetailFragment"
        android:label="home_detail"
        tools:layout="@layout/fragment_home_detail">
        <argument
            android:name="item_id"
            app:argType="string"
            android:defaultValue="" />
    </fragment>
</navigation>